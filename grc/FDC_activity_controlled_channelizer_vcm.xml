<?xml version="1.0"?>
<block>
  <name>Activity controlled Channelizer</name>
  <key>FDC_activity_controlled_channelizer_vcm</key>
  <category>[FDC]</category>
  <import>import FDC</import>
  <make>FDC.activity_controlled_channelizer_vcm($blocklen, $channels, $thresh, $relinvovl, $maxblocks, $message, $fileoutput, $path, $threads)</make>
  
  
  
  <param>
    <name>Blocklen</name>
    <key>blocklen</key>
    <value>4096</value>
    <type>int</type>
  </param>
  
  
  <param>
    <name>Channels</name>
    <key>channels</key>
    <value>[ [0.1, 0.05], [0.3,0.05], [0.5,0.1], ]</value>
    <type>raw</type>
  </param>
  
  <param>
    <name>Threshold[dB]</name>
    <key>thresh</key>
    <value>12.0</value>
    <type>float</type>
  </param>
  
  <param>
    <name>Rel. inv. Overlap</name>
    <key>relinvovl</key>
    <value>4</value>
    <type>int</type>
  </param>
  
  <param>
    <name>Max consecutive blocks</name>
    <key>maxblocks</key>
    <value>64</value>
    <type>int</type>
  </param>
  
  <param>
		<name>Message Passing Channels</name>
		<key>msg</key>
		<type>enum</type>
		<option>
			<name>Yes</name>
			<key>True</key>
			<opt>hide:0</opt>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
			<opt>hide:1</opt>
		</option>
	</param>
	
	<param>
		<name>Channels to files</name>
		<key>fileoutput</key>
		<type>enum</type>
		<option>
			<name>Yes</name>
			<key>True</key>
			<opt>hide:0</opt>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
			<opt>hide:1</opt>
		</option>
	</param>
	
  <param>
    <name>Folder to store files</name>
    <key>path</key>
    <value>/home/...</value>
    <type>string</type>
    <hide>fileoutput.hide</hide>
  </param>

<param>
		<name>Threaded</name>
		<key>threads</key>
		<type>enum</type>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>
  
  
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>blocklen</vlen>
  </sink>

  
  <source>
    <name>msgout</name>
    <type>message</type>
    <optional>1</optional>
    <hide>msg.hide</hide>
  </source>
</block>
