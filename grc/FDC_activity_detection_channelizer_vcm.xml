<?xml version="1.0"?>
<block>
  <name>Activity detection Channelizer</name>
  <key>FDC_activity_detection_channelizer_vcm</key>
  <category>[FDC]</category>
  <import>import FDC</import>
  <make>FDC.activity_detection_channelizer_vcm($blocklen, $segments, $thresh, $relinvovl, $maxblocks, $message, $fileoutput, $path, $threads, $minchandist, $channeldeactivationdelay, $channelflankpuffer)</make>
  <!-- int v_blocklen, std::vector< std::vector< float > > v_segments, float v_thresh, int v_relinvovl, int v_maxblocks, bool v_message, bool v_fileoutput, std::string v_path, bool v_threads, float v_minchandist -->
  
  <param>
    <name>Blocklen</name>
    <key>blocklen</key>
    <value>2**12</value>
    <type>int</type>
  </param>
  
  
  <param>
    <name>Segments</name>
    <key>segments</key>
    <value>[ [0.1,0.3], [0.5,0.6], ... ]</value>
    <type>raw</type>
  </param>
  
  <param>
    <name>Minimum channel distance</name>
    <key>minchandist</key>
    <value>samprate / 20e3</value>
    <type>float</type>
  </param>
  
  <param>
    <name>Channel flank puffer</name>
    <key>channelflankpuffer</key>
    <value>0.1</value>
    <type>float</type>
  </param>
  
  <param>
    <name>Threshold</name>
    <key>thresh</key>
    <value>8.0</value>
    <type>float</type>
  </param>
  
  <param>
    <name>Relative inverse overlap</name>
    <key>relinvovl</key>
    <value>4</value>
    <type>int</type>
  </param>
  
  <param>
    <name>Max consecutive blocks</name>
    <key>maxblocks</key>
    <value>256</value>
    <type>int</type>
  </param>
  
  <param>
    <name>Deactivation delay</name>
    <key>channeldeactivationdelay</key>
    <value>2</value>
    <type>int</type>
  </param>
  
  <param>
		<name>Channels to message</name>
		<key>message</key>
		<type>enum</type>
		<option>
			<name>Yes</name>
			<key>True</key>
			<opt>hide:0</opt>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
			<opt>hide:0</opt>
		</option>
	</param>
	
  
  <param>
		<name>Channels to files</name>
		<key>fileoutput</key>
		<type>enum</type>
		<option>
			<name>Yes</name>
			<key>True</key>
			<opt>hide:0</opt>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
			<opt>hide:1</opt>
		</option>
	</param>
	
	<param>
    <name>Folder to store files</name>
    <key>path</key>
    <value>/home/...</value>
    <type>string</type>
    <hide>fileoutput.hide</hide>
  </param>

<param>
		<name>Threaded</name>
		<key>threads</key>
		<type>enum</type>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>
  
  
  
<sink>
    <name>in</name>
    <type>complex</type>
    <vlen>blocklen</vlen>
  </sink>

  
  <source>
    <name>msgout</name>
    <type>message</type>
    <optional>True</optional>
    <hide>message.hide</hide>
  </source>
</block>
